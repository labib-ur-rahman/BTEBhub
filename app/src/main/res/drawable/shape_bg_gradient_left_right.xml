<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient Right Bar -->
    <item
        android:left="100dp"
        android:bottom="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#FFC107"
                android:startColor="#FF5722" />
            <corners
                android:bottomRightRadius="15dp"
                android:topRightRadius="15dp" />
        </shape>
    </item>

    <!-- Gradient Left Bar -->
    <item
        android:width="15dp"
        android:bottom="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#FFC107"
                android:startColor="#FF5722" />
            <corners
                android:bottomLeftRadius="15dp"
                android:topLeftRadius="15dp" />
        </shape>
    </item>


    <!-- Rounded White Background -->
    <item
        android:end="3dp"
        android:start="3dp"> <!-- Push down the white fill to expose the gradient -->
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_card_item_color" />
            <corners
                android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp"
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp" />
        </shape>
    </item>

</layer-list>

