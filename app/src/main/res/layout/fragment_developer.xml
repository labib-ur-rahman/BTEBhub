<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/sl_icon"
            android:src="@drawable/sl_left_arrow_back_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHeading"
            style="@style/mainContainer_H1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Developer Information"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@+id/btnBack"
            app:layout_constraintVertical_bias="0.70" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <LinearLayout
                style="@style/dev_info_container"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="100dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/sl_icon"
                        android:src="@drawable/labib" />

                </androidx.cardview.widget.CardView>

                <TextView
                    style="@style/result_info_heading"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:lineSpacingExtra="-10dp"
                    android:text="@string/labib_ur_rahman"
                    android:textSize="20sp" />

                <TextView
                    style="@style/result_info_subheading"
                    android:gravity="center"
                    android:lineSpacingExtra="-6dp"
                    android:layout_marginBottom="5dp"
                    android:text="Mobile Application Developer\nComputer Technology\nRoll : 511023\nGroup : A" />

            </LinearLayout>

            <LinearLayout
                style="@style/dev_info_container"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="100dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/sl_icon"
                        android:src="@drawable/fuad" />

                </androidx.cardview.widget.CardView>

                <TextView
                    style="@style/result_info_heading"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:lineSpacingExtra="-10dp"
                    android:text="Fuad Hasan Joy"
                    android:textSize="20sp" />

                <TextView
                    style="@style/result_info_subheading"
                    android:gravity="center"
                    android:lineSpacingExtra="-6dp"
                    android:layout_marginBottom="5dp"
                    android:text="Android App Developer\nComputer Technology\nRoll : 511133\nGroup : B" />

            </LinearLayout>

            <LinearLayout
                style="@style/dev_info_container"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="100dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/sl_icon"
                        android:src="@drawable/kokil" />

                </androidx.cardview.widget.CardView>

                <TextView
                    style="@style/result_info_heading"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:lineSpacingExtra="-10dp"
                    android:text="Md. Kamruzzaman Kokil"
                    android:textSize="20sp" />

                <TextView
                    style="@style/result_info_subheading"
                    android:gravity="center"
                    android:lineSpacingExtra="-6dp"
                    android:layout_marginBottom="5dp"
                    android:text="Android App Developer\nComputer Technology\nRoll : 580750\nGroup : B" />

            </LinearLayout>

            <LinearLayout
                style="@style/dev_info_container"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="100dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/sl_icon"
                        android:src="@drawable/humaun" />

                </androidx.cardview.widget.CardView>

                <TextView
                    style="@style/result_info_heading"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:lineSpacingExtra="-10dp"
                    android:text="Humayoun Kobir"
                    android:textSize="20sp" />

                <TextView
                    style="@style/result_info_subheading"
                    android:gravity="center"
                    android:lineSpacingExtra="-6dp"
                    android:layout_marginBottom="5dp"
                    android:text="UI Designer\nComputer Technology\nRoll : 577963\nGroup : B" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>