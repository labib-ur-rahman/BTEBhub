<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_bg_gradient_top"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etLabelName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:hint="Enter Name or Title"
        app:hintTextColor="@color/mainContainer_HeadingText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/Rounded">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_gradient_left"
            android:fontFamily="@font/hind_siliguri"
            android:inputType="textPersonName"
            android:textSize="17sp"
            android:textColor="@color/mainContainer_HeadingText"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_btn_negative"
        android:fontFamily="@font/hind_siliguri"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical|center_horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/btnSave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLabelName" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_btn_positive"
        android:fontFamily="@font/hind_siliguri"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical|center_horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Save"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCancel"
        app:layout_constraintTop_toBottomOf="@+id/etLabelName" />

</androidx.constraintlayout.widget.ConstraintLayout>
