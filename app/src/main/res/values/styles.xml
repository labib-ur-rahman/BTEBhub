<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="sideBar">
        <item name="android:layout_width">@dimen/size_sidebar_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/sideBar_Bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="sideBarTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/size_small</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/mainContainer_SubHeadingText</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sl_sidebar_icon">
        <item name="android:layout_marginBottom">@dimen/size_sidebar_margin</item>
        <item name="android:background">@drawable/sl_circle_bg</item>
        <item name="android:contextClickable">true</item>
        <item name="android:padding">@dimen/size_sidebar_padding</item>
        <item name="android:layout_height">@dimen/size_sidebar_icon_size</item>
        <item name="android:layout_width">@dimen/size_sidebar_icon_size</item>
    </style>

    <!-- ================================================================================================== -->
    <!--                                           HEADING TAG                                              -->
    <!-- ================================================================================================== -->

    <style name="mainContainer_H1">
        <item name="android:fontFamily">@font/hind_siliguri</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/mainContainer_HeadingText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mainContainer_H2">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/mainContainer_SubHeadingText</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="background">@drawable/sl_button_selected</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="result_info_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/shape_bg_gradient_top</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="dev_info_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/shape_bg_gradient_top_bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="result_info_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hind_siliguri</item>
        <item name="android:textColor">@color/mainContainer_HeadingText</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="result_info_paragraph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hind_siliguri</item>
        <item name="android:textColor">@color/mainContainer_HeadingText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="result_info_subheading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hind_siliguri</item>
        <item name="android:textColor">@color/mainContainer_HeadingText</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="btn_semester_image">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="input_layout_dropdown">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/hind_siliguri</item>
        <item name="android:background">@drawable/shape_bg_gradient_left_right</item>
        <item name="android:popupBackground">@drawable/shape_bg_gradient_top_bottom</item>
        <item name="android:textColor">@color/mainContainer_HeadingText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">none</item>
        <item name="android:dropDownHeight">wrap_content</item>
    </style>

    <style name="input_layout_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_view_result_button</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>